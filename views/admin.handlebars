<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <h3 class="text-center">ADD Workshop Name And Date</h3><br>
            <form action="/users/detail" method="POST">
                <div class="form-group">
                    <label for="workshopname"> Work-Shop Name</label>
                    <input type="text" name="workshopname" class="form-control" value="{{name}}"
                        placeholder="Enter Workshop Name" required>
                </div>
                <div class="form-group">
                    <label for="date">Date</label>
                    <input type="email" name="email" class="form-control" value="{{email}}" placeholder="DDMMYYYY"
                        required>
                </div>

                <button type="submit" class="btn btn-dark">ADD Detail</button>
            </form>
        </div>
    </div>
</div>